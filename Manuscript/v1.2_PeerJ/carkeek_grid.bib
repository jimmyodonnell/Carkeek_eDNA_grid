doi = {10.3389/fmars.2016.00096},
issn = {2296-7745},
journal = {Frontiers in Marine Science},
keywords = {AMBI,Biotic indices,COI barcodes,Illumina MiSeq,extracellular DNA,macroinvertebrates},
month = {jun},
pages = {96},
publisher = {Frontiers},
title = {{Benchmarking DNA Metabarcoding for Biodiversity-Based Monitoring and Assessment}},
