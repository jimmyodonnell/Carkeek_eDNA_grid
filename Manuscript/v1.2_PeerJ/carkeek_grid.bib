isbn = {1751-7362},
issn = {1751-7370},
journal = {The ISME journal},
keywords = {18S,18S: genetics,Animals,Biodiversity,Computational Biology,DNA Barcoding,Ecosystem,Environmental Monitoring,Estuaries,Eukaryota,Geography,Great Britain,Phenotype,RNA,Ribosomal,Salinity,Taxonomic,Water Microbiology},
