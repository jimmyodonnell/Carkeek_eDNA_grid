issn = {1755-0998},
journal = {Molecular Ecology Resources},
keywords = {Lepomis macrochirus,eDNA extraction,eDNA preservation,environmental DNA},
number = {1},
pages = {168--176},
title = {{The room temperature preservation of filtered environmental DNA samples and assimilation into a phenol–chloroform–isoamyl alcohol DNA extraction}},
url = {http://dx.doi.org/10.1111/1755-0998.12281},
volume = {15},
year = {2015}
