journal = {PeerJ},
keywords = {18S,Biomonitoring,Meiofauna,Sediments,Submarine canyons,eDNA,eRNA},
month = {dec},
pages = {e2807},
publisher = {PeerJ Inc.},
title = {{Spatio-temporal monitoring of deep-sea communities using metabarcoding of sediment DNA and RNA}},
