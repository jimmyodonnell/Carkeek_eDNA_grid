doi = {10.1111/geb.12223},
file = {:Users/jimmy.odonnell/Library/Application Support/Mendeley Desktop/Downloaded/Fonseca et al. - 2014 - Metagenetic analysis of patterns of distribution and diversity of marine meiobenthic eukaryotes.pdf:pdf},
isbn = {1466-822X},
issn = {14668238},
journal = {Global Ecology and Biogeography},
